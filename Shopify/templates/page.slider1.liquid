<div id="page" class="clearfix">
    
    <div class="slider-container">
    <div class="slider">
      <span class="ui-slider-handle">&nbsp;</span>
    </div>

    <ul id="slider">
      <li class="slide"><img src="{{ 'slideshow1_1.jpg' | asset_url }}" data-url="{{ settings.image1_1_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow1_2.jpg' | asset_url }}" data-url="{{ settings.image1_2_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow1_3.jpg' | asset_url }}" data-url="{{ settings.image1_3_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow1_4.jpg' | asset_url }}" data-url="{{ settings.image1_4_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow1_5.jpg' | asset_url }}" data-url="{{ settings.image1_5_link }}" class="slide-img" /></li>
    </ul>
    <div id="slider-empty" style="display:none; padding:120px 0; text-align:center;">
      <h4>Slider is empty</h4>
      If you are the shop owner, <a href="/admin/themes/current/settings">click here</a> to upload images to this slideshow.
    </div>
  </div>
  
  <div class="main">
    <div class="details clearfix">
      <h2 class="title">{{ page.title }}</h2>
    </div>
    <div class="content">
      {{ page.content }}
    </div>
  </div> <!-- /.main -->
